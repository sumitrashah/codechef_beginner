

#include <bits/stdc++.h>

using namespace std;

int solve(string s,int k)
{
   int n=s.size();
   int i=0,j=0;
   
   unordered_map<char,int>m;
   
   
   int ans=0,count=0;
   
   
   while(i<n)
   {
      m[s[i]]++;
      
      while(m.size()>k)
      {
         if(--m[s[j]]==0)
         m.erase(s[j]);
         j++;
      }
      
      ans+=i-j;
      i++;
   }
   return ans;
   
}

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
       string s;
       cin>>s;
       int k;cin>>k;
       cout<<solve(s,k)-solve(s,k-1)<<endl;
       
       
    }
    return 0;
}
